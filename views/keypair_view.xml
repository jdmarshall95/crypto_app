<?xml version="1.0"?>
<odoo>
  <record id="view_form_keypair" model="ir.ui.view">
    <field name="name">Keypair Form</field>
    <field name="model">crypto.block</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <!--- buttons here -->
        </header>
        <sheet>
          <group name="group_top">
            <group name="group_left">
              <field name="keypair_name"/>
              <field name="active" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <record id="view_tree_keypair" model="ir.ui.view">
    <field name="name">Keypair List</field>
    <field name="model">crypto.block</field>
    <field name="arch" type="xml">
      <tree>
        <field name="keypair_name"/>
      </tree>
    </field>
  </record>
  <record id="view_search_keypair" model="ir.ui.view">
    <field name="name">Keypair Filters</field>
    <field name="model">crypto.block</field>
    <field name="arch" type="xml">
      <search>
        <field name="keypair_name"/>
        <filter name="filter_inactive"
                string="Inactive"
                domain="[('active','=',True)]"/>
        <filter name="filter_active"
                string="Active"
                domain="[('active','=',False)]"/>
      </search>
    </field>
  </record>
</odoo>
